<div class="row">
  <% @images.each do |image| %> 
    <div class="col-sm12 col-md-3 col-lg-3 options-container">
      <div class="portfolio-item">
        <div class="image-container">
          <%= link_to(image_tag(image.url, :class => "img-responsive"), image_path(image.id)) %>
        </div>
        <div class="description">
          <p><%= image.description %></p>
          <p>$<%= image.price %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

