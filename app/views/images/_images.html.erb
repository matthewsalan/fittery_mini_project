<div class="row">
  <% @images.each do |image| %> 
    <div class="col-md-4">
      <div class="portfolio-item">
        <div class="image-container">
          <%= link_to image_tag(image.url, :class => "img-responsive") %>
        </div>
        <div class="description">
          <p><%= image.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>